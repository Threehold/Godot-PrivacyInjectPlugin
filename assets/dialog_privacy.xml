<!-- res/layout/dialog_privacy.xml -->
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white"
	android:orientation="vertical"
	android:padding="16dp"
	android:layout_marginLeft="20dp"
	android:layout_marginRight="20dp"
	android:radius="12dp"
	tools:ignore="WebViewLayout,UnusedAttribute">

	<TextView
		android:id="@+id/dialog_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingBottom="12dp"
		android:text="用户协议及隐私政策"
		android:textColor="#222222"
		android:textSize="18sp"
		android:textStyle="bold"
		tools:ignore="HardcodedText" />

	<WebView
		android:id="@+id/dialog_webview"
		android:layout_width="match_parent"
		android:layout_height="280dp"
		android:background="#f9f9f9"
		android:padding="8dp"
		android:scrollbars="vertical"
		tools:ignore="WebViewLayout" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="16dp"
		android:gravity="end">

		<Button
			android:id="@+id/dialog_negative_button"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_marginEnd="10dp"
			android:background="@drawable/btn_gray_round"
			android:text="退出"
			android:textColor="#666666"
			android:textSize="14sp"
			android:paddingStart="24dp"
			android:paddingEnd="24dp"
			android:clickable="true"
			tools:ignore="HardcodedText" />

		<Button
			android:id="@+id/dialog_positive_button"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:background="@drawable/btn_blue_round"
			android:text="同意并继续"
			android:textColor="@android:color/white"
			android:textSize="14sp"
			android:paddingStart="24dp"
			android:paddingEnd="24dp"
			tools:ignore="HardcodedText" />

	</LinearLayout>

</LinearLayout>
